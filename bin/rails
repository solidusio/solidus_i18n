#!/usr/bin/env ruby

# frozen_string_literal: true

app_root = 'spec/dummy'

unless File.exist? "#{app_root}/bin/rails"
  system "bin/rake", app_root or begin # rubocop:disable Style/AndOr
    warn "Automatic creation of the dummy app failed"
    exit 1
  end
end

Dir.chdir app_root
exec 'bin/rails', *ARGV
